<UserControl x:Class="Theremin.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:theremin="clr-namespace:Theremin"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="LeapMotion Frame Rate:" />
                <TextBlock Text="{Binding Path=FrameRate}" />
                <TextBlock Text="Height:" />
                <TextBlock Text="{Binding Path=HandHeight}" />
                <TextBlock Text="{Binding Path=Connected}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
